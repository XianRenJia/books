














/*每个页面公共css */
page::-webkit-scrollbar{
	display:none;
}
page,
uni-page{
	background-color: var(--c-bg-3);
	color: var(--c-txt-1);
	font-size: var(--f-size-2);
	
	/* font-size */
	--f-size-1:24rpx;
	--f-size-2:28rpx;
	--f-size-3:32rpx;
	--f-size-4:36rpx;
	--f-size-5:40rpx;
	--f-size-6:44rpx;
	
	/* color | background */
	--c-txt-1:#000;
	--c-txt-2:#95A1A6;
	--c-txt-3:#cdced0;
	
	--c-bg-1:#FFF;
	--c-bg-2:#7E7F94;
	--c-bg-3:#FFF;
	
	/* padding-left | right */
	--pad-lr:26rpx;
	
	/* navbar-height */
	--h-head:96rpx;
	
	/* input placeholder text color */
	--c-input-holder:#696a7f;
}
/* init button */
uni-button,
button{
	margin: 0;
	padding: 0;
	color: var(--c-txt-1);
	background-color: var(--c-bg-1);
}
uni-button:after,
button:after{
	border: none;
	width: 100%;
	height: 100%;
}
.button-hover{
	color: inherit;
	background-color: inherit;
}
/* init img */
uni-image>._img,
._img{
	vertical-align: middle;
}
.l-status{
	width: 100%;
	height: var(--status-bar-height);
	background-color: transparent;
}
/* clear both  */
.l-clear-both:after{
	content: ' ';
	display: block;
	width: 0;
	height: 0;
	clear: both;
	zoom: 1;
}
/* navbar -fixed -placeholder */
.content {
	position: relative;
	/* padding-top: 50rpx; */
}
.l-fixed{
	position: fixed;
	width: 100%;
	z-index: 999;
	top: 0;
	background-color: var(--c-bg-3);
}
.l-placeholder{
	width: 100%;
	
	height: calc(var(--status-bar-height) + var(--h-head));
	
	
	
}
/* l-head-search */
.l-head{
	padding: 0 32rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: var(--h-head);
}
.l-search{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 16rpx 26rpx;
	margin-right: 16rpx;
	border-radius: 20rpx;
	background-color: #f6f7f9;
	/* background-color: #222338; */
}
.l-icon-search{
	width: 29rpx;
	height: 29rpx;
}
.l-search-input{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 0 12rpx;
}
.l-holder{
	color: var(--c-input-holder);
}
/* l-swiper */
.l-body{
	padding: 0 var(--pad-lr);
}
.l-swiper{
	margin: 36rpx 0 0;
	height: 248rpx;
}
.l-swiper-item{
	height: 80%;
	overflow: hidden;
	border-radius: 26rpx;
}
.l-carousel-img{
	width: 100%;
	height: 100%;
}
/* l-icon */
.l-icon-more{
	width: 30rpx;
	/* height: 27rpx; */
	vertical-align: middle;
	margin-left: 12rpx;
}

